<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Backend/etc/system_file.xsd">
    <system>
        <tab id="waymoreroutee" translate="label" sortOrder="100">
            <label>Waymore Routee Settings</label>
        </tab>
        <section id="waymoreroutee" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Settings</label>
            <tab>waymoreroutee</tab>
            <resource>Routee_WaymoreRoutee::system_config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1"
                showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enable" translate="label" type="select" sortOrder="1"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="username" translate="label comment" type="text" sortOrder="2"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Username</label>
                    <comment>Username of waymore.routee.net</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="password" translate="label comment" type="password" sortOrder="3"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Password</label>
                    <comment>Password of waymore.routee.net</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="testmode" translate="label" type="select" sortOrder="9"
                    showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mass_import" translate="label comment tooltip" type="button" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Start Sync</label>
                    <comment>Synchronize with waymore.routee.net</comment>
                    <frontend_model>Routee\WaymoreRoutee\Block\System\Config\Sendmassdata</frontend_model>
                </field>
                <field id="datatransferred" translate="label comment tooltip" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Data Transferred</label>
                </field>
            </group>
        </section>
    </system>
</config>